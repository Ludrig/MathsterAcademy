<div class="container" id="container">
    <div class="mathster slide-left" id="mathster">
        <img class="mathsterLogo"src="~/mathsternewlogo.png" />

    </div>


    <div class="row">
        <div class="menuChoice wrapper" id="addition">
            <i class="fas fa-plus"></i>
            <ul id="plusList">
                <li><a class="easyA" asp-controller="Game" asp-route-level="@nameof(Level.Easy)" asp-route-gametype="@nameof(GameType.Addition)"></a></li>
                <li><a class="mediumA" asp-controller="Game" asp-route-level="@nameof(Level.Medium)" asp-route-gametype="@nameof(GameType.Addition)"></a></li>
                <li><a class="hardA" asp-controller="Game" asp-route-level="@nameof(Level.Hard)" asp-route-gametype="@nameof(GameType.Addition)"></a></li>
            </ul>
        </div>

        <div class="menuChoice wrapper" id="subtraction">
            <i class="fas fa-minus"></i>
            <ul id="minusList">
                <li><a class="easyA" asp-controller="Game" asp-route-level="@nameof(Level.Easy)" asp-route-gametype="@nameof(GameType.Subtraction)"></a></li>
                <li><a class="mediumA" asp-controller="Game" asp-route-level="@nameof(Level.Medium)" asp-route-gametype="@nameof(GameType.Subtraction)"></a></li>
                <li><a class="hardA" asp-controller="Game" asp-route-level="@nameof(Level.Hard)" asp-route-gametype="@nameof(GameType.Subtraction)"></a></li>
            </ul>
        </div>
        <div class="menuChoice wrapper" id="multiplication">
            <i class="fas fa-times"></i>
            <ul id="multiList">
                <li><a class="easyA" asp-controller="Game" asp-route-level="@nameof(Level.Easy)" asp-route-gametype="@nameof(GameType.Multiplication)"></a></li>
                <li><a class="mediumA" asp-controller="Game" asp-route-level="@nameof(Level.Medium)" asp-route-gametype="@nameof(GameType.Multiplication)"></a></li>
                <li><a class="hardA" asp-controller="Game" asp-route-level="@nameof(Level.Hard)" asp-route-gametype="@nameof(GameType.Multiplication)"></a></li>
            </ul>
        </div>

        <div class="menuChoice wrapper" id="division">
            <div class="slash"></div>
            <ul id="divList">
                <li><a class="easyA" asp-controller="Game" asp-route-level="@nameof(Level.Easy)" asp-route-gametype="@nameof(GameType.Division)"></a></li>
                <li><a class="mediumA" asp-controller="Game" asp-route-level="@nameof(Level.Medium)" asp-route-gametype="@nameof(GameType.Division)"></a></li>
                <li><a class="hardA" asp-controller="Game" asp-route-level="@nameof(Level.Hard)" asp-route-gametype="@nameof(GameType.Division)"></a></li>
            </ul>
        </div>

        <div class="menuChoice squirrel" id="shark">
            <img src="~/ekorre.png" />
        </div>

        <div class="menuChoice wrapper" id="settings">
            <i class="fas fa-cog"></i>
            <ul id="questions">
                <li><input type="radio" name="tenQuestions" value="10" /> 10 Frågor </li>

                <li><input type="radio" name="tenQuestions" value="20" /> 20 Frågor</li>

                <li><input type="checkbox" name="noSound" value="3" /> Ljud Av</li>

            </ul>
        </div>

        <div class="menuChoice wrapper" id="instructionVideo">
            <i class="fas fa-video"></i>
            <ul id="videoList">
                <li><a class="addition" asp-controller="Video" asp-route-gametype="@nameof(GameType.Addition)"></a></li>
                <li><a class="subtraction" asp-controller="Video" asp-route-gametype="@nameof(GameType.Subtraction)"></a></li>
                <li><a class="multiplication" asp-controller="Video" asp-route-gametype="@nameof(GameType.Multiplication)"></a></li>
                <li><a class="division" asp-controller="Video" asp-route-gametype="@nameof(GameType.Division)"></a></li>
            </ul>
        </div>
    </div>
</div>




